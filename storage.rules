rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Function to check if the user is an admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.admin == true || 
        request.auth.token.email == 'navyugmgalani@gmail.com' || 
        request.auth.token.email == 'navyugenterprise2003@gmail.com'
      );
    }

    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
