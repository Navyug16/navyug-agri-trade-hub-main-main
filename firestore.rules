rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if the user is an admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.admin == true || 
        request.auth.token.email in ['navyugmgalani@gmail.com', 'navyugenterprise2003@gmail.com']
      );
    }

    // Products: Public read, Admin write
    match /products/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Blogs: Public read, Admin write
    match /blogs/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Inquiries: Anyone can create (Contact Form), but only Admins can read/modify
    match /inquiries/{document=**} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Global: Allow admins to read/write everything else, deny by default
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
